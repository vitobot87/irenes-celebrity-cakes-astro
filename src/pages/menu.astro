---
import Layout from '../layouts/Layout.astro';

const base = import.meta.env.BASE_URL;

const pastries = ["Black Forest", "Cannoli (Ricotta, Chocolate, Vanilla)", "Cappuccino", "Chocolate Eclair", "Cream Puffs (Hazelnut, Zabaglione, Coffee, Vanilla)", "Lemon Meringue Tart", "Lemon Roll", "Mango Mousse", "Mixed Fruit Tarts", "Rum Baba", "Rum Balls", "Sfoglia Cannoli", "Snow Balls", "Strawberry Mousse", "Strawberry Roll", "Strawberry Tarts", "Tiramisu", "Trangiata", "Veneziane"];

const almondCookies = ["Almond Crescent", "Candy Fruit", "Chocolate Chip", "Coffee", "Colombine", "Green/White", "Green Cherry", "Mandorlatte", "Orange/White", "Pink", "Red Cherry", "Soft Amaretti"];

const shortbreadCookies = ["Apricot Ring", "Dark & Orange", "Dark & White", "Dark Shell", "Green Cherry", "Raspberry Ring", "Raspberry Thumb", "Red Cherry", "White Shell"];

const cakeSponges = ["Chocolate Sponge", "Red Velvet Sponge", "Sfoglia (puff pastry)", "St. Honore", "Vanilla Sponge"];

const cakeCreams = ["Bacio Cream", "Banana", "Cappuccino Cream", "Chantilly Cream", "Chocolate Cream", "Grand Marnier Cream", "Hazelnut Cream", "Lemon Cream", "Mango Cream", "Nougat/Torrone Cream", "Raspberry Cream", "Strawberry Cream", "Tiramisu Flavour", "Vanilla Cream", "Wildberry Cream"];

const cakeTypes = ["Bacio Cake", "Cappuccino Cake", "Caramel Crunch", "Caramel Pecan", "Chocolate Mousse", "Ferrero Rocher", "Grand Marnier", "Hazelnut Delight", "Italian Rum Cake", "Sacher Torte", "Sfoglia Cake", "St. Honore", "Strawberry Shortcake", "Tiramisu Cake", "White & Dark Mousse", "White Mousse"];

const cakeSizes = [
  { size: '6" Round', serves: "6 people" },
  { size: '8" Round', serves: "8-10 people" },
  { size: '9" Round', serves: "12-14 people" },
  { size: '10" Round', serves: "16-18 people" },
  { size: '12" Round', serves: "20-25 people" },
  { size: "Half Slab", serves: "25-30 people" },
  { size: "14 x 14", serves: "40-45 people" },
  { size: "Full Slab", serves: "60-70 people" },
];

const holidays = [
  { name: "St. Joseph's Day", items: ["Zeppole"] },
  { name: "Easter", items: ["Pastiera Di Grano", "Marzipan Lamb", "Chocolate Eggs"] },
  { name: "Thanksgiving", items: ["Pumpkin Pies", "Assorted Fruit Pies"] },
  { name: "Christmas", items: ["Christmas Logs", "Yule Logs", "Marzipan", "Gift Baskets"] },
  { name: "Valentine's Day", items: ["Heart Cakes", "Specialty Desserts"] },
  { name: "Mother's/Father's Day", items: ["Custom Cakes", "Specialty Cakes"] },
];
---

<Layout title="Menu | Irene's Celebrity Cakes">
  <main class="min-h-screen bg-amber-50">
    <!-- Header -->
    <header class="fixed top-0 left-0 right-0 z-50 bg-white/95 backdrop-blur-sm border-b border-amber-100">
      <div class="max-w-7xl mx-auto px-4">
        <div class="flex items-center justify-between h-16">
          <a href={base} class="flex items-center gap-3">
            <img src={`${base}logo.png`} alt="Irene's Celebrity Cakes" width="40" height="40" class="rounded-lg" />
            <span class="font-semibold text-rose-800">Irene's Celebrity Cakes</span>
          </a>
          <nav class="hidden md:flex items-center gap-6">
            <a href={base} class="text-sm text-gray-600 hover:text-rose-800">Home</a>
            <a href={`${base}menu/`} class="text-sm text-rose-800 font-medium">Menu</a>
            <a href={`${base}gallery/`} class="text-sm text-gray-600 hover:text-rose-800">Gallery</a>
          </nav>
          <a href="tel:+19056245545" class="bg-rose-800 hover:bg-rose-900 text-white px-4 py-2 rounded-lg text-sm font-medium">
            (905) 624-5545
          </a>
        </div>
      </div>
    </header>

    <!-- Hero -->
    <section class="pt-24 pb-12 bg-rose-800 text-white">
      <div class="max-w-7xl mx-auto px-4 text-center">
        <h1 class="text-4xl sm:text-5xl font-bold mb-4">Our Menu</h1>
        <p class="text-lg text-rose-100 max-w-2xl mx-auto">Every item made fresh with traditional Italian recipes and quality ingredients.</p>
      </div>
    </section>

    <!-- Quick Nav -->
    <section class="sticky top-16 z-40 bg-white/95 backdrop-blur-sm border-b py-4">
      <div class="max-w-7xl mx-auto px-4 flex gap-2 overflow-x-auto">
        <a href="#pastries" class="px-4 py-2 rounded-full text-sm font-medium bg-rose-100 text-rose-800 hover:bg-rose-800 hover:text-white">Pastries</a>
        <a href="#cookies" class="px-4 py-2 rounded-full text-sm font-medium bg-rose-100 text-rose-800 hover:bg-rose-800 hover:text-white">Cookies</a>
        <a href="#cakes" class="px-4 py-2 rounded-full text-sm font-medium bg-rose-100 text-rose-800 hover:bg-rose-800 hover:text-white">Cakes</a>
        <a href="#holidays" class="px-4 py-2 rounded-full text-sm font-medium bg-rose-100 text-rose-800 hover:bg-rose-800 hover:text-white">Holidays</a>
      </div>
    </section>

    <!-- Pastries -->
    <section id="pastries" class="py-16">
      <div class="max-w-7xl mx-auto px-4">
        <div class="grid lg:grid-cols-3 gap-12">
          <div>
            <h2 class="text-3xl font-bold text-rose-800 mb-4">Italian Pastries</h2>
            <p class="text-gray-600 mb-6">Made fresh daily using authentic Italian recipes passed down through generations.</p>
            <img src={`${base}gallery/desserts/d_003.jpg`} alt="Pastries" class="rounded-2xl shadow-lg w-full" />
          </div>
          <div class="lg:col-span-2 bg-white rounded-2xl p-8 shadow-lg">
            <div class="grid sm:grid-cols-2 gap-x-8 gap-y-2">
              {pastries.map((item) => (
                <div class="flex items-center gap-2 py-2 border-b border-rose-100">
                  <span class="w-2 h-2 rounded-full bg-rose-800"></span>
                  <span class="text-gray-700">{item}</span>
                </div>
              ))}
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Cookies -->
    <section id="cookies" class="py-16 bg-white">
      <div class="max-w-7xl mx-auto px-4">
        <h2 class="text-3xl font-bold text-rose-800 mb-8 text-center">Traditional Cookies</h2>
        <div class="grid md:grid-cols-2 gap-8">
          <div class="bg-amber-50 rounded-2xl p-8">
            <h3 class="text-2xl font-bold text-rose-800 mb-6">Almond Cookies</h3>
            <div class="space-y-2">
              {almondCookies.map((item) => (
                <div class="flex items-center gap-2 py-2 border-b border-rose-100">
                  <span class="w-2 h-2 rounded-full bg-rose-800"></span>
                  <span class="text-gray-700">{item}</span>
                </div>
              ))}
            </div>
          </div>
          <div class="bg-amber-50 rounded-2xl p-8">
            <h3 class="text-2xl font-bold text-rose-800 mb-6">Shortbread Cookies</h3>
            <div class="space-y-2">
              {shortbreadCookies.map((item) => (
                <div class="flex items-center gap-2 py-2 border-b border-rose-100">
                  <span class="w-2 h-2 rounded-full bg-rose-800"></span>
                  <span class="text-gray-700">{item}</span>
                </div>
              ))}
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Cakes -->
    <section id="cakes" class="py-16">
      <div class="max-w-7xl mx-auto px-4">
        <h2 class="text-3xl font-bold text-rose-800 mb-4 text-center">Cakes</h2>
        <p class="text-gray-600 text-center mb-12 max-w-2xl mx-auto">Build your perfect cake by choosing your sponge, cream filling, and size.</p>

        <div class="grid lg:grid-cols-2 gap-8 mb-12">
          <div class="bg-white rounded-2xl p-8 shadow-lg">
            <h3 class="text-2xl font-bold text-rose-800 mb-6">Sponge Options</h3>
            <div class="space-y-2">
              {cakeSponges.map((item) => (
                <div class="flex items-center gap-2 py-2 border-b border-rose-100">
                  <span class="w-2 h-2 rounded-full bg-rose-800"></span>
                  <span class="text-gray-700">{item}</span>
                </div>
              ))}
            </div>
          </div>
          <div class="bg-white rounded-2xl p-8 shadow-lg">
            <h3 class="text-2xl font-bold text-rose-800 mb-6">Cream Fillings</h3>
            <div class="grid sm:grid-cols-2 gap-x-6 gap-y-2">
              {cakeCreams.map((item) => (
                <div class="flex items-center gap-2 py-2 border-b border-rose-100">
                  <span class="w-2 h-2 rounded-full bg-rose-800"></span>
                  <span class="text-gray-700">{item}</span>
                </div>
              ))}
            </div>
          </div>
        </div>

        <div class="bg-rose-800 rounded-2xl p-8 mb-12">
          <h3 class="text-2xl font-bold text-white mb-6 text-center">Signature Cake Types</h3>
          <div class="grid sm:grid-cols-2 lg:grid-cols-4 gap-4">
            {cakeTypes.map((item) => (
              <div class="bg-white/10 rounded-lg px-4 py-3 text-center">
                <span class="text-amber-100 font-medium">{item}</span>
              </div>
            ))}
          </div>
        </div>

        <div class="bg-white rounded-2xl p-8 shadow-lg">
          <h3 class="text-2xl font-bold text-rose-800 mb-6 text-center">Cake Sizes</h3>
          <div class="grid sm:grid-cols-2 lg:grid-cols-4 gap-4">
            {cakeSizes.map((item) => (
              <div class="bg-amber-50 rounded-xl p-4 flex justify-between items-center">
                <span class="font-semibold text-rose-800">{item.size}</span>
                <span class="text-gray-500 text-sm">{item.serves}</span>
              </div>
            ))}
          </div>
        </div>
      </div>
    </section>

    <!-- Holidays -->
    <section id="holidays" class="py-16 bg-white">
      <div class="max-w-7xl mx-auto px-4">
        <h2 class="text-3xl font-bold text-rose-800 mb-4 text-center">Holiday Specials</h2>
        <p class="text-gray-600 text-center mb-12 max-w-2xl mx-auto">Traditional pastries and creative festive creations for every celebration.</p>
        <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-6">
          {holidays.map((holiday) => (
            <div class="bg-amber-50 rounded-2xl p-6">
              <h3 class="text-xl font-bold text-rose-800 mb-4">{holiday.name}</h3>
              <ul class="space-y-2">
                {holiday.items.map((item) => (
                  <li class="flex items-center gap-2 text-gray-700">
                    <span class="w-1.5 h-1.5 rounded-full bg-rose-800"></span>
                    {item}
                  </li>
                ))}
              </ul>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- CTA -->
    <section class="py-16 bg-rose-800">
      <div class="max-w-4xl mx-auto px-4 text-center">
        <h2 class="text-3xl font-bold text-white mb-4">Ready to Place an Order?</h2>
        <p class="text-rose-100 mb-8">For custom cakes, we recommend ordering at least a week in advance.</p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href="tel:+19056245545" class="bg-white text-rose-800 font-bold px-8 py-4 rounded-lg hover:bg-amber-50">
            Call (905) 624-5545
          </a>
          <a href={`${base}gallery/`} class="bg-white/10 text-white border border-white/30 font-semibold px-8 py-4 rounded-lg hover:bg-white/20">
            Browse Gallery
          </a>
        </div>
      </div>
    </section>

    <!-- Footer -->
    <footer class="py-8 bg-gray-900 text-gray-400">
      <div class="max-w-7xl mx-auto px-4 flex flex-col md:flex-row justify-between items-center gap-4">
        <div class="flex items-center gap-3">
          <img src={`${base}logo.png`} alt="Irene's Celebrity Cakes" width="40" height="40" class="rounded-lg" />
          <span class="text-white font-semibold">Irene's Celebrity Cakes</span>
        </div>
        <p class="text-sm">Â© {new Date().getFullYear()} Irene's Celebrity Cakes. All rights reserved.</p>
      </div>
    </footer>
  </main>
</Layout>
