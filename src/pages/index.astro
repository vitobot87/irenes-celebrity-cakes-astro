---
import Layout from '../layouts/Layout.astro';

const base = import.meta.env.BASE_URL;

const services = [
  { title: "Wedding Cakes", description: "From classic elegance to modern masterpieces, we design the perfect centerpiece for your special day.", image: `${base}gallery/wedding/WDC_000.png` },
  { title: "Custom Celebration Cakes", description: "Milestone birthdays, baby showers, corporate events - we create custom cakes that capture the spirit of your celebration.", image: `${base}gallery/birthday/BDC_012.png` },
  { title: "Italian Pastries & Desserts", description: "Step into our bakery and be transported to Italy. Authentic cannoli, sfogliatelle, tiramisu, and traditional Italian cookies.", image: `${base}gallery/pastries/d_003.jpg` },
];

const galleryImages = {
  wedding: ["WDC_000.png", "WDC_003.png", "WDC_007.png", "WDC_010.png", "WDC_015.png", "WDC_020.png"],
  birthday: ["BDC_005.png", "BDC_012.png", "BDC_025.png", "BDC_030.png", "BDC_045.png", "BDC_050.png"],
  custom: ["CCD_000.png", "CCD_005.png", "CCD_010.png", "CCD_015.png", "CCD_020.png", "CCD_025.png"],
};

const testimonials = [
  { quote: "I've been coming to Irene's Celebrity Cakes since the day she opened and I'm always pleased with the quality of her baking. My nieces have gotten their wedding cakes here and they were just spectacular.", author: "Lucy V.", rating: 5 },
  { quote: "The service was 10/10. I had gotten quotes from 6 other bakeries but Irene and team were so accommodating and lovely to deal with! The cake photographed so well, it was a beautiful touch to our wedding.", author: "Recent Wedding Customer", rating: 5 },
  { quote: "What a wonderful discovery. My visit to Irene's Celebrity Cake Shop exceeded all expectations. The pastries were absolutely delicious - you can tell they use quality ingredients and traditional recipes.", author: "Ramdas M.", rating: 5 },
];
---

<Layout title="Irene's Celebrity Cakes | Custom Cakes & Italian Pastries in Mississauga">
  <main class="min-h-screen bg-amber-50">
    <!-- Header -->
    <header class="fixed top-0 left-0 right-0 z-50 bg-white/95 backdrop-blur-sm border-b border-amber-100">
      <div class="max-w-7xl mx-auto px-4">
        <div class="flex items-center justify-between h-16 sm:h-20">
          <div class="flex items-center gap-3">
            <img src={`${base}logo.png`} alt="Irene's Celebrity Cakes" width="40" height="40" class="rounded-lg" />
            <div class="hidden sm:block">
              <h1 class="text-lg font-semibold text-rose-800">Irene's Celebrity Cakes</h1>
              <p class="text-xs text-amber-600">Est. 2007</p>
            </div>
          </div>
          <nav class="hidden md:flex items-center gap-8">
            <a href="#about" class="text-sm font-medium text-gray-600 hover:text-rose-800 transition-colors">About</a>
            <a href="#services" class="text-sm font-medium text-gray-600 hover:text-rose-800 transition-colors">Services</a>
            <a href={`${base}gallery/`} class="text-sm font-medium text-gray-600 hover:text-rose-800 transition-colors">Full Gallery</a>
            <a href="#reviews" class="text-sm font-medium text-gray-600 hover:text-rose-800 transition-colors">Reviews</a>
            <a href="#contact" class="text-sm font-medium text-gray-600 hover:text-rose-800 transition-colors">Contact</a>
          </nav>
          <a href="tel:+19056245545" class="bg-rose-800 hover:bg-rose-900 text-white px-4 py-2 rounded-lg text-sm font-medium transition-colors">
            (905) 624-5545
          </a>
        </div>
      </div>
    </header>

    <!-- Hero Section -->
    <section class="relative pt-20 min-h-screen flex items-center">
      <div class="absolute inset-0 z-0">
        <img src={`${base}gallery/wedding/WDC_007.png`} alt="Elegant wedding cake" class="w-full h-full object-cover" />
        <div class="absolute inset-0 bg-gradient-to-r from-black/70 via-black/50 to-transparent"></div>
      </div>
      <div class="relative z-10 max-w-7xl mx-auto px-4 py-24">
        <div class="max-w-2xl">
          <h1 class="text-4xl sm:text-5xl lg:text-6xl font-bold text-white mb-6 leading-tight">
            Where Every Celebration Becomes Unforgettable
          </h1>
          <p class="text-lg sm:text-xl text-gray-200 mb-8 leading-relaxed">
            Mississauga's beloved Italian bakery crafting custom cakes and authentic pastries since 2007. With over 35 years of experience, we bring your sweetest visions to life.
          </p>
          <div class="flex flex-col sm:flex-row gap-4">
            <a href="tel:+19056245545" class="inline-flex items-center justify-center bg-rose-800 hover:bg-rose-900 text-white px-8 py-4 rounded-lg text-lg font-semibold transition-colors">
              Order Your Custom Cake
            </a>
            <a href="#contact" class="inline-flex items-center justify-center bg-white/10 hover:bg-white/20 backdrop-blur-sm text-white border border-white/30 px-8 py-4 rounded-lg text-lg font-semibold transition-colors">
              Visit Our Bakery
            </a>
          </div>
          <div class="mt-12 flex items-center gap-2">
            <span class="text-amber-400 text-xl">‚òÖ‚òÖ‚òÖ‚òÖ‚òÖ</span>
            <span class="text-white font-medium">4.6/5</span>
            <span class="text-gray-300">from 1,060+ Google Reviews</span>
          </div>
        </div>
      </div>
    </section>

    <!-- About Section -->
    <section id="about" class="py-20 bg-amber-50">
      <div class="max-w-7xl mx-auto px-4">
        <div class="grid lg:grid-cols-2 gap-12 items-center">
          <div>
            <h2 class="text-3xl sm:text-4xl font-bold text-rose-800 mb-6">Our Story</h2>
            <p class="text-gray-600 text-lg mb-6 leading-relaxed">
              For over 17 years, Irene's Celebrity Cakes has been the heart of celebrations across Mississauga and the GTA. What began as a passion for authentic Italian baking has blossomed into one of the most trusted names in custom cakes and pastries.
            </p>
            <p class="text-gray-600 text-lg mb-8 leading-relaxed">
              With more than 35 years of experience in the craft, owner Irene brings the warmth of Italian tradition to every creation. From elaborate multi-tier wedding cakes to beloved family recipes passed down through generations, we believe that every celebration deserves something extraordinary.
            </p>
            <div class="grid sm:grid-cols-3 gap-6">
              <div class="text-center p-4 bg-white rounded-xl shadow-sm">
                <div class="text-3xl font-bold text-rose-800">35+</div>
                <div class="text-sm text-gray-500">Years Experience</div>
              </div>
              <div class="text-center p-4 bg-white rounded-xl shadow-sm">
                <div class="text-3xl font-bold text-rose-800">1,000+</div>
                <div class="text-sm text-gray-500">Happy Customers</div>
              </div>
              <div class="text-center p-4 bg-white rounded-xl shadow-sm">
                <div class="text-3xl font-bold text-rose-800">4.6</div>
                <div class="text-sm text-gray-500">Star Rating</div>
              </div>
            </div>
          </div>
          <div class="relative">
            <img src={`${base}hero-pastries.png`} alt="Italian pastry display" class="rounded-2xl shadow-2xl w-full" />
          </div>
        </div>
      </div>
    </section>

    <!-- Services Section -->
    <section id="services" class="py-20 bg-white">
      <div class="max-w-7xl mx-auto px-4">
        <div class="text-center mb-16">
          <h2 class="text-3xl sm:text-4xl font-bold text-rose-800 mb-4">What We Offer</h2>
          <p class="text-gray-600 text-lg max-w-2xl mx-auto">From elegant wedding cakes to authentic Italian pastries</p>
        </div>
        <div class="grid md:grid-cols-3 gap-8">
          {services.map((service) => (
            <div class="bg-amber-50 rounded-2xl overflow-hidden shadow-lg hover:shadow-xl transition-shadow">
              <div class="h-64 overflow-hidden">
                <img src={service.image} alt={service.title} class="w-full h-full object-cover hover:scale-105 transition-transform duration-300" />
              </div>
              <div class="p-6">
                <h3 class="text-xl font-bold text-rose-800 mb-2">{service.title}</h3>
                <p class="text-gray-600">{service.description}</p>
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Gallery Section -->
    <section id="gallery" class="py-20 bg-amber-50">
      <div class="max-w-7xl mx-auto px-4">
        <div class="text-center mb-16">
          <h2 class="text-3xl sm:text-4xl font-bold text-rose-800 mb-4">Our Creations</h2>
          <p class="text-gray-600 text-lg max-w-2xl mx-auto">Browse our gallery of handcrafted cakes - each one made with love and attention to detail.</p>
        </div>

        <!-- Wedding Cakes -->
        <div class="mb-16">
          <h3 class="text-2xl font-bold text-rose-800 mb-6 text-center">Wedding Cakes</h3>
          <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-6 gap-4">
            {galleryImages.wedding.map((img) => (
              <div class="relative aspect-square rounded-xl overflow-hidden shadow-lg hover:shadow-xl transition-shadow group">
                <img src={`${base}gallery/wedding/${img}`} alt="Wedding cake" class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300" />
              </div>
            ))}
          </div>
        </div>

        <!-- Birthday Cakes -->
        <div class="mb-16">
          <h3 class="text-2xl font-bold text-rose-800 mb-6 text-center">Birthday & Celebration Cakes</h3>
          <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-6 gap-4">
            {galleryImages.birthday.map((img) => (
              <div class="relative aspect-square rounded-xl overflow-hidden shadow-lg hover:shadow-xl transition-shadow group">
                <img src={`${base}gallery/birthday/${img}`} alt="Birthday cake" class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300" />
              </div>
            ))}
          </div>
        </div>

        <!-- Custom Cakes -->
        <div class="mb-12">
          <h3 class="text-2xl font-bold text-rose-800 mb-6 text-center">Custom Designs</h3>
          <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-6 gap-4">
            {galleryImages.custom.map((img) => (
              <div class="relative aspect-square rounded-xl overflow-hidden shadow-lg hover:shadow-xl transition-shadow group">
                <img src={`${base}gallery/custom/${img}`} alt="Custom cake" class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300" />
              </div>
            ))}
          </div>
        </div>

        <div class="text-center">
          <p class="text-gray-600 mb-4">This is just a sample of our work.</p>
          <a href={`${base}gallery/`} class="inline-flex items-center justify-center bg-rose-800 hover:bg-rose-900 text-white px-6 py-3 rounded-lg font-semibold transition-colors">
            View Full Gallery (330+ Photos) ‚Üí
          </a>
        </div>
      </div>
    </section>

    <!-- Reviews Section -->
    <section id="reviews" class="py-20 bg-rose-800">
      <div class="max-w-7xl mx-auto px-4">
        <div class="text-center mb-16">
          <h2 class="text-3xl sm:text-4xl font-bold text-white mb-4">What Our Customers Say</h2>
          <div class="flex items-center justify-center gap-2">
            <span class="text-amber-400 text-2xl">‚òÖ‚òÖ‚òÖ‚òÖ‚òÖ</span>
            <span class="text-white text-lg font-medium">4.6/5 from 1,060+ reviews on Google</span>
          </div>
        </div>
        <div class="grid md:grid-cols-3 gap-8">
          {testimonials.map((t) => (
            <div class="bg-white rounded-2xl p-8 shadow-lg">
              <div class="text-amber-400 mb-4">{"‚òÖ".repeat(t.rating)}</div>
              <p class="text-gray-600 mb-6 italic">"{t.quote}"</p>
              <p class="text-rose-800 font-semibold">‚Äî {t.author}</p>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Contact Section -->
    <section id="contact" class="py-20 bg-white">
      <div class="max-w-7xl mx-auto px-4">
        <div class="text-center mb-12">
          <h2 class="text-3xl sm:text-4xl font-bold text-rose-800 mb-4">Visit Our Bakery</h2>
          <p class="text-gray-600 text-lg">Come see (and taste!) what makes us special</p>
        </div>
        <div class="grid md:grid-cols-2 gap-12">
          <div class="space-y-6">
            <div class="flex items-start gap-4">
              <div class="bg-rose-100 p-3 rounded-lg">üìç</div>
              <div>
                <h3 class="font-semibold text-rose-800">Location</h3>
                <p class="text-gray-600">1258 Eglinton Ave E<br/>Mississauga, ON</p>
              </div>
            </div>
            <div class="flex items-start gap-4">
              <div class="bg-rose-100 p-3 rounded-lg">üìû</div>
              <div>
                <h3 class="font-semibold text-rose-800">Phone</h3>
                <a href="tel:+19056245545" class="text-rose-600 hover:underline text-lg">(905) 624-5545</a>
              </div>
            </div>
            <div class="flex items-start gap-4">
              <div class="bg-rose-100 p-3 rounded-lg">üïê</div>
              <div>
                <h3 class="font-semibold text-rose-800">Hours</h3>
                <p class="text-gray-600">Monday: Closed<br/>Tue-Fri: 9AM - 6PM<br/>Sat-Sun: 9AM - 5PM</p>
              </div>
            </div>
          </div>
          <div class="bg-amber-50 rounded-xl overflow-hidden">
            <iframe
              src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2886.5!2d-79.62!3d43.62!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x0%3A0x0!2zNDPCsDM3JzEyLjAiTiA3OcKwMzcnMTIuMCJX!5e0!3m2!1sen!2sca!4v1234567890"
              width="100%"
              height="100%"
              style="border: 0; min-height: 300px;"
              allowfullscreen
              loading="lazy"
            ></iframe>
          </div>
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section class="py-16 bg-gradient-to-r from-rose-800 to-rose-900">
      <div class="max-w-4xl mx-auto px-4 text-center">
        <h2 class="text-3xl font-bold text-white mb-4">Ready to Create Something Sweet?</h2>
        <p class="text-rose-100 mb-8 text-lg">Call us today to discuss your custom cake or visit our bakery to browse our pastry selection.</p>
        <a href="tel:+19056245545" class="inline-flex items-center gap-2 bg-white text-rose-800 font-bold px-8 py-4 rounded-lg hover:bg-amber-50 transition-colors text-lg">
          üìû Call (905) 624-5545
        </a>
      </div>
    </section>

    <!-- Footer -->
    <footer class="py-8 bg-gray-900 text-gray-400">
      <div class="max-w-7xl mx-auto px-4">
        <div class="flex flex-col md:flex-row justify-between items-center gap-4">
          <div class="flex items-center gap-3">
            <img src={`${base}logo.png`} alt="Irene's Celebrity Cakes" width="40" height="40" class="rounded-lg" />
            <span class="text-white font-semibold">Irene's Celebrity Cakes</span>
          </div>
          <p class="text-sm">¬© {new Date().getFullYear()} Irene's Celebrity Cakes. All rights reserved.</p>
        </div>
      </div>
    </footer>
  </main>
</Layout>
